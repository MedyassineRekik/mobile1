<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#FED4FFCB"> <!-- Replaced theme attribute with your teal color -->

    <ImageView
        android:id="@+id/onboarding_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:contentDescription="Medication reminder illustration"
        android:src="@drawable/appointments"
        tools:ignore="ContentDescription,HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Gestionnaire Numérique d'Ordonnances"
        android:textColor="#009688"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:text="Stockez et organisez toutes vos ordonnances en un seul endroit sécurisé"
        android:textColor="#000000"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />
</LinearLayout>