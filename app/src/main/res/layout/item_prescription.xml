<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Titre de l'ordonnance -->
        <TextView
            android:id="@+id/prescriptionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titre de l'ordonnance"
            android:textColor="#009688"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Laboratoire -->
        <TextView
            android:id="@+id/laboratoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nom du laboratoire"
            android:textColor="#616161"
            android:textSize="14sp" />

        <!-- Bouton Voir PDF (optionnel) -->
        <Button
            android:id="@+id/viewPdfButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="#009688"
            android:text="Voir PDF"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</androidx.cardview.widget.CardView>